<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="left">

        <Button
        android:layout_height="wrap_content"
        android:id="@+id/nav_manage_persons_groups"
        android:title="@string/manage_people"
        android:layout_width="match_parent"
            android:gravity="left|center_vertical"
            android:text="\t Manage People"
            android:textAllCaps="false"
            android:textColor="@android:color/darker_gray"
            android:background="@android:color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light"
            app:layout_constraintTop_toBottomOf="@+id/nav_manage_persons_groups"
            app:layout_constraintBottom_toTopOf="@+id/nav_manage_events"/>

        <Button
        android:id="@+id/nav_manage_events"
        android:title="Manage Events"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="@android:color/darker_gray"
            android:gravity="left|center_vertical"
            android:background="@android:color/white"
            android:text="\t Manage Events"
            android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/view"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light"
            app:layout_constraintTop_toBottomOf="@+id/nav_manage_events" />

        <Button
            android:id="@+id/nav_help"
            android:title="Help"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="@android:color/darker_gray"
            android:gravity="left|center_vertical"
            android:background="@android:color/white"
            android:text="\t Help"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@id/view1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light"
            app:layout_constraintTop_toBottomOf="@+id/nav_help" />

